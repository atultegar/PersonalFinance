<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="mfTrans" Height="400" Width="400">
    <StackPanel>
        <TextBlock Text="Fund Name" Margin="22,5,0,0"/>
        <ComboBox x:Name="ComboBox1" HorizontalAlignment="Left" Width="350" Margin="22,5,0,0"/>
        <TextBlock Text="Invested Amount" Margin="22,10,0,0"/>
        <TextBox x:Name="InvAmount" HorizontalAlignment="Left" Width="250" Margin="22,5,0,0" TextChanged="InvAmount_TextChanged" />
        <TextBlock Text="Date" Margin="22,10,0,0"/>
        <DatePicker HorizontalAlignment="Left" Margin="22,5,0,0" Width="250"/>
        <TextBlock Text="NAV" Margin="22,10,0,0"/>
        <TextBox x:Name="NAV" HorizontalAlignment="Left" Width="250" Margin="22,5,0,0" TextChanged="InvAmount_TextChanged" />
        <TextBlock Text="Units" Margin="22,10,0,0"/>
        <TextBox x:Name="Units" HorizontalAlignment="Left" Width="250" Margin="22,5,0,0" />
        <TextBlock Text="Folio No." Margin="22,10,0,0"/>
        <TextBox x:Name="Folio" HorizontalAlignment="Left" Width="250" Margin="22,5,0,0" />
    </StackPanel>
        
</Window>
